<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dila.ernadilasukmadinata_1202154308_modul1.MakanOsas">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="491dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="7dp">

        <TextView
            android:id="@+id/Mamam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Makan Malam"
            android:textAlignment="center"
            android:textSize="50dp" />

        <TextView
            android:id="@+id/Milea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dengan Milea"
            android:textAlignment="center"
            android:textSize="40dp"
            tools:layout_marginTop="40dp" />

        <EditText
            android:id="@+id/nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Nama"
            android:inputType="textPersonName"
            tools:layout_marginTop="80dp" />

        <EditText
            android:id="@+id/jumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Jumlah"
            android:inputType="textPersonName"
            tools:layout_marginTop="40dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="403dp">

            <Button
                android:id="@+id/eatbus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="EATBUS" />

            <Button
                android:id="@+id/abnormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_weight="1"
                android:background="@color/colorAccent"
                android:text="ABNORMAL" />
        </LinearLayout>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>
